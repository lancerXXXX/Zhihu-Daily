<view>

  <view>
    <text class="num">{{extra.long_comments+'条长评'}}</text>
  </view>

  <!-- 长评论 -->
  <view wx:for="{{long_comments}}">
  
    <view class="aritile">
      <!-- 评论作者信息 -->
      <view class="author-info">
        <image class="avatar" src="{{item.avatar}}"></image>
        <text class="author">{{item.author}}</text>
      </view>
      <!-- 评论内容 -->
      <view>{{item.content}}</view>

    </view>

  </view>

  <view>
    <text class="num">{{extra.short_comments+'短评'}}</text>
  </view>
  <!-- 短评论 -->
  <view wx:for="{{short_comments}}">
    <view class="aritile">
      <!-- 评论作者信息 -->
      <view class="author-info">
        <image class="avatar" src="{{item.avatar}}"></image>
        <text class="author">{{item.author}}</text>
      </view>
      <!-- 评论内容 -->
      <view>{{item.content}}</view>

    </view>
  </view>
</view>